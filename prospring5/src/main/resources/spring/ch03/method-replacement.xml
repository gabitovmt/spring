<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singer"
          class="spring.ch03.methodreplacement.Singer"
          scope="prototype"/>

    <bean id="abstractLookupBean"
          class="spring.ch03.methodreplacement.AbstractLookupDemoBean">
        <lookup-method name="getMySinger" bean="singer"/>
    </bean>

    <bean id="standardLookupBean"
          class="spring.ch03.methodreplacement.StandardLookupDemoBean">
        <property name="mySinger" ref="singer"/>
    </bean>
</beans>